enum Role {
  DOCTOR
  PATIENT
  ADMIN
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

//Models

model User {
  id String @id @default(uuid())
  email String @unique
  password String
  role Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  doctor Doctor?
  patient Patient?
}

model Doctor {
  id String @id @default(uuid())
  userId String @unique
  name String
  specialization String
  latitude Float
  longitude Float
  isAvailable Boolean @default(true)
  createdAt DateTime @default(now())
  user User @relation(fields: [userId], references: [id])

  services     Service[]
  schedules    Schedule[]
  appointments Appointment[]
  emergencies  EmergencyQueue[]

}


model Patient {
  id        String   @id @default(uuid())
  userId    String   @unique
  name      String
  phone     String
  latitude  Float
  longitude Float
  createdAt DateTime @default(now())

  user         User          @relation(fields: [userId], references: [id])
  appointments Appointment[]
  emergencies  EmergencyQueue[]
}


model Service {
  id               String   @id @default(uuid())
  doctorId         String
  name             String
  durationMinutes  Int
  price            Float

  doctor Doctor @relation(fields: [doctorId], references: [id])

  appointments Appointment[]
}


model Schedule {
  id           String   @id @default(uuid())
  doctorId     String
  date         DateTime
  startTime    DateTime
  endTime      DateTime
  slotDuration Int

  doctor Doctor @relation(fields: [doctorId], references: [id])
}

model Appointment {
  id              String             @id @default(uuid())
  doctorId        String
  patientId       String
  serviceId       String
  appointmentDate DateTime
  startTime       DateTime
  endTime         DateTime
  status          AppointmentStatus
  createdAt       DateTime           @default(now())

  doctor  Doctor  @relation(fields: [doctorId], references: [id])
  patient Patient @relation(fields: [patientId], references: [id])
  service Service @relation(fields: [serviceId], references: [id])

  @@unique([doctorId, appointmentDate, startTime])
}




model EmergencyQueue {
  id         String   @id @default(uuid())
  patientId  String
  doctorId   String
  priority   Int
  createdAt  DateTime @default(now())


  doctor  Doctor  @relation(fields: [doctorId], references: [id])

  patient Patient @relation(fields: [patientId], references: [id])
 
}

